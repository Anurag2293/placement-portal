// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

// create a developer table
model Developer {
  id         Int      @id @unique @default(autoincrement())
  externalId String   @unique
  createdAt  DateTime @default(now())
  name       String   @db.VarChar(255)
  email      String   @unique
  location   String?  @db.VarChar(255)
  bio        String?  @db.VarChar(255)
  avatar     String?  @db.VarChar(255)
  website    String?  @db.VarChar(255)
  github     String?  @db.VarChar(255)
  linkedin   String?  @db.VarChar(255)
}

model Skill {
  id           Int    @id @default(autoincrement())
  name         String @db.VarChar(255)
  developer_id Int
}

// create a hiring company table
model Company {
  id        Int      @id @default(autoincrement())
  createdAt DateTime @default(now())
  name      String   @db.VarChar(255)
  hrName    String   @db.VarChar(255)
  email     String   @unique
  password  String   @db.VarChar(255)
  location  String?  @db.VarChar(255)
  website   String?  @db.VarChar(255)
  logo      String?  @db.VarChar(255)
}

// create a process/job table
model Process {
  id             Int       @id @default(autoincrement())
  company_id     Int
  createdAt      DateTime  @default(now())
  name           String    @db.VarChar(255)
  role           String    @db.VarChar(255)
  description    String    @db.LongText
  compensation   String    @db.MediumText
  eligibility    String    @db.MediumText
  start_date     DateTime? @db.DateTime
  location       String    @db.VarChar(255)
  remote         Boolean   @default(false)
  status         String    @db.VarChar(255)
  apply_deadline DateTime? @db.DateTime
}
